{
  "name": "api-template",
  "version": "0.3.2",
  "description": "API With Knex and POSTGRAPHILE",
  "repository": {
    "directory": "api-template",
    "type": "git",
    "url": "https://github.com/droidMakk/api-template.git"
  },
  "main": "build/app.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -w -c rollup.config.js",
    "predocker": "npm run build",
    "docker": "docker build .",
    "docker:beta": "npm run docker -- -t api-template:beta",
    "predocker:runbeta": "npm run docker:beta",
    "docker:runbeta": "docker run --env-file .env -p 8080:8080 api-template:beta",
    "image": "docker run -d ",
    "nodemon": "nodemon",
    "db:migrate": "knex migrate:latest",
    "db:newmigrate": "knex migrate:make -x ts ",
    "postinstall": "npm run pm2:dev",
    "app:dev": "concurrently \"npm:watch\" \"npm:nodemon\"",
    "pm2:dev": "pm2 start ./build/app.js --name \"API\"",
    "predeploy:dev": "npm run build"
  },
  "keywords": [
    "api",
    "typescript",
    "rollup",
    "express",
    "postgresql",
    "postgraphile"
  ],
  "author": {
    "email": "droidmakk@gmail.com",
    "name": "droidmakk",
    "url": "https://droidmakk.github.io"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.0",
    "morgan": "^1.9.1",
    "mosca": "^2.8.3",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.3",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.1",
    "postgraphile": "^4.4.3",
    "postgraphile-plugin-connection-filter": "^1.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.35",
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.146",
    "@types/mkdirp": "^0.5.2",
    "@types/morgan": "^1.7.37",
    "@types/pg": "^7.11.2",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build:dev"
    }
  }
}
