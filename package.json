{
  "name": "api-template",
  "version": "0.1.0",
  "description": "api implementation using rollup with express and postgraphile",
  "repository": {
    "directory": "api-template",
    "type": "git",
    "url": "https://github.com/droidMakk/api-template.git"
  },
  "main": "build/app.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -w -c rollup.config.js",
    "predocker": "npm run build",
    "docker": "docker build .",
    "docker:beta": "npm run docker -- -t api-template:beta",
    "predocker:runbeta": "npm run docker:beta",
    "docker:runbeta": "docker run --env-file .env -p 8080:8080 api-template:beta",
    "image": "docker run -d ",
    "nodemon": "nodemon",
    "postinstall": "npm run build"
  },
  "keywords": [
    "api",
    "ustime",
    "typescript",
    "rollup",
    "express",
    "postgresql",
    "postgraphile"
  ],
  "author": {
    "email": "droidmakk@gmail.com",
    "name": "droidmakk",
    "url": "https://droidmakk.github.io"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv-safe": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.0",
    "morgan": "^1.9.1",
    "postgraphile": "^4.4.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/csurf": "^1.9.35",
    "@types/dotenv-safe": "^5.0.3",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/morgan": "^1.7.37",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "rollup": "^1.21.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sucrase": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build"
    }
  }
}